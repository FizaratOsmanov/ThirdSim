@model CategoryPostDTO

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Category</h4>
                        <form asp-action="Create" asp-controller="Category" asp-area="Admin" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Name</label>
                                <input asp-for="Name" type="text" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-secondary ml-2">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
