@model ICollection<NewsGetDTO>;

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 text-gray-800 mb-3">News</h1>

    <!-- Create Button -->
    <div class="mb-4">
        <a asp-action="Create" asp-controller="News" asp-area="Admin" class="btn btn-success">
            <i class="fas fa-plus"></i> Create
        </a>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">News Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            
                            <th>Title</th>
                            <th>CategoryId</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (NewsGetDTO item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="text-center">
                                    <img class="img-thumbnail rounded" width="50" src="~/UPLOAD/NEWs/@item.ImgPath" alt="Image of @item.Title" />
                                </td>
                                
                                <td>@item.Title</td>
                                <td>@item.CategoryId</td>
                                <td class="text-center">
                                    <a asp-controller="News" asp-action="Update" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                                        <i class="fas fa-edit"></i> Update
                                    </a>
                                    <a asp-controller="News" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
