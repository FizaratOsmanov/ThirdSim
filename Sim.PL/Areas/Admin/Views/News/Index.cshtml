@model ICollection<News>
@{
    string disabled = string.Empty;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">News</h4>
                        <p class="card-description">
                            <a asp-action="Create">Create</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            CategoryId
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Is deleted?!
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (News item in Model)

                                        {
                                            <tr>
                                                <td class="py-1">@item.Id</td>
                                                <td>@item.Text</td>
                                                <td>@item.CategoryId</td>

                                                <td>
                                                    <img style="object-fit:cover" src="~/UPLOAD/ImageFolder/@item.ImgPath" />
                                                </td>
                                                <td>@item.IsDeleted</td>
                                                <td>
                                                    <a class="btn btn-warning mr-2" style="color:#fff;" asp-area="Admin" asp-controller="News" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                    <a class="btn btn-danger mr-2 @disabled" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                                </td>
                                            </tr>
                                        }

                                    }

                                    else

                                    {
                                        <tr><td colspan="9">No news available.</td></tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>