@model NewsPostDTO

<h2>Create News Post</h2>
<form asp-action="Create" asp-controller="News" asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control"  required />
    </div>
    <div class="form-group">
        <label for="Title">CategoryId</label>
        <input asp-for="CategoryId" type="text" class="form-control"  required />
    </div>
    <div class="form-group">
        <label for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control"  accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
